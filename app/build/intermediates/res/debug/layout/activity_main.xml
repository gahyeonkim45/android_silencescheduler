<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:background="#ffffff">


    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#F2F2F2">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp">

            <Button
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:text="Menu"
                android:id="@+id/button"
                android:layout_alignParentLeft="true"
                android:layout_toLeftOf="@+id/monthText"
                android:layout_toStartOf="@+id/monthText"
                android:background="#F2F2F2"/>

            <TextView
                android:id="@+id/monthText"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:layout_centerInParent="true"
                android:gravity="center_horizontal"
                android:text="MonthView"
                android:textColor="#222222"
                android:textSize="20dp"

                android:textStyle="bold" />

            <Button
                android:layout_width="70dp"
                android:layout_height="50dp"
                android:text="Refresh"
                android:id="@+id/refresh"
                android:layout_alignParentRight="true"
                android:layout_toRightOf="@+id/monthText"

                android:background="#F2F2F2"/>

        </RelativeLayout>

        <com.example.allactivity.CalendarView
            android:id="@+id/monthView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.30" />

    </LinearLayout>
</LinearLayout><!-- From: file:/C:/Android/SilenceScheduler_Final/app/src/main/res/layout/activity_main.xml -->